
<%= form_with model: [ @article, @article.comments.build ], remote: true do |form| %>
<%= render 'shared/error_messages', object: form.object %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>

  <p>
    <%= form.label "select status for comment !" %><br>
    <%= form.select :status, ["public", "private", "archived"] %>
  </p>

  <p>
    <%= form.submit  yield(:button_text), class: 'btn btn-success' %><br>
  </p>
<% end %>